<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layoutDirection="rtl"
              android:layout_height="match_parent"
              android:paddingRight="28dp"
              android:paddingLeft="28dp"
              android:orientation="vertical"
              android:paddingTop="16dp"
              android:paddingBottom="16dp"
              tools:context=".JobsCategories">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">



        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_centerInParent="true"
                  android:textColor="#000"
                  android:textSize="14sp"
                  android:text="@string/item_choosing_message"/>

        <TextView android:layout_width="55dp" android:layout_height="30dp"
                  android:layout_alignParentEnd="true"
                  android:layout_marginEnd="16dp"
                  android:textSize="14sp"
                  android:gravity="center"
                  android:text="0/3"
                  android:textColor="#FF0000"
                  android:background="@drawable/layout_back_18r"/>
    </RelativeLayout>


    <GridView
            android:id="@+id/category_gv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnWidth="160dp"
            android:horizontalSpacing="15dp"
            android:gravity="center"
            android:numColumns="2"
            android:background="@drawable/selector_item"
            android:verticalSpacing="15dp"/>

    <Button android:layout_width="match_parent" android:layout_height="60dp"
    android:id="@+id/next_btn"
    android:backgroundTint="#EB0C2E"
            android:background="@drawable/layout_back"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:textSize="24sp"
            android:textColor="@android:color/white"

    android:text="@string/next"/>


</LinearLayout>